<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="">
    <title>Hello, world!</title>
  </head>
  <body style="overflow: hidden">
    <%- include('../partials/nav') %> 
    <div class="row">
      <div class="col-md-6 offset-3">
        <div class="card">
          <div class="card-body">
            <h1 class="text-center">Login</h1>
        <form action="/login" method="post">
          <div class="mb-3">
            
            <input
              class="form-control"
              name="username"
              type="text"
              id="username"
              placeholder="Username"
              required
            />
        </div>
          <div class="mb-3">
           
            <input
              class="form-control"
              name="password"
              type="password"
              placeholder="Password"
              id="password"
              required
            />
          </div>
        
          <div style="display: flex; flex-direction: row;flex-wrap: wrap;
          align-items: center;
          justify-content: center;" class="mb-3">
            <button style="width: 574.67px;" class="btn btn-primary mb-5">Login</button>
            <h6 style="flex-direction: row;">Don't have an account?<a href="/register"> Sign Up</a></h6>
            <!-- <button style="width: 350px;" class="btn btn-success mt-2">Create New Account</button> -->
          </div>
          
        </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>






